<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="d-flex align-items-center">
            <ul class="breadcrumb-list">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item">{{this.CatName}}</li>
            </ul>
        </div>
    </div>
</div>

<!-- breadcrumb-area end -->
<!-- Shop Page Start  -->
<div class="shop-category-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <!-- Shop Bottom Area Start -->
            <div class="shop-bottom-area">
                <!-- Tab Content Area Start -->
                {{#each this.products}}
                    <div class="tab-pane fade show active row" id="shop-list">
                        <div class="col-12 col-md-4 col-lg-3 card-content">
                            <div class="item card-item">
                                <div class="card">
                                    <img src="{{LinkURL}}" class="card-img-top" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ProName}}</h5>
                                        <div class="card-price">
                                            <p class="card-price-num">{{format_number Price}} VND</p>
                                        </div>
                                        <hr>
                                        <p class="card-sold">Sold: 9k</p>
                                    </div>
                                    <div class="card__overlay">
                                        <a href="/product/detail/{{this.ProID}}" class="card__overlay-detail">
                                            <i class="fa fa-arrow-circle-right"></i>Details
                                        </a>
                                        <button class="card__overlay-cart">
                                            <i class="fa fa-shopping-cart"></i>Add to cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}

                <!-- Tab Content Area End -->

                <!--  Pagination Area Start -->
                <div class="load-more-items text-center mb-md-60px mb-lm-60px mt-30px0px" data-aos="fade-up">
                    <div class="pagination">
                        <ul>
                            <!--pages or li are comes from javascript -->
                        </ul>
                    </div>
                </div>
                <!--  Pagination Area End -->
            </div>
            <!-- Shop Bottom Area End -->
        </div>
    </div>
</div>
<!-- Shop Page End  -->