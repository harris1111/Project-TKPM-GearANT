<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="d-flex align-items-center">
            <ul class="breadcrumb-list">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="/">{{product.BigCatName}}</a></li>
                <li class="breadcrumb-item">{{product.CatName}}</li>
            </ul>
        </div>
    </div>
</div>

<!-- breadcrumb-area end -->

<!-- Product Details Area Start -->
<div class="product-details-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-12 col-xs-12 mb-lm-30px mb-md-30px mb-sm-30px">
                <!-- Swiper -->
                <div class="swiper-container zoom-top">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide zoom-image-hover">
                            <img class="img-responsive m-auto" src="{{product.LinkURL}}" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12 col-xs-12" data-aos="fade-up" data-aos-delay="200">
                <div class="product-details-content quickview-content p-3">

                    <h2>{{product.ProName}}</h2>

                    <div class="product-infor">
                        <ul>
                            <li>
                                Brand: <p>{{product.CatName}}</p>
                            </li>
                            <li>
                                Sold: <p>{{product.sold}}</p>
                            </li>
                            {{#if product.outstock}}
                            <li>
                                <p class="text-danger"><strong>Out of stock</strong></p>
                            </li>
                            {{else}}
                            <li>
                                Remaining: <p>{{product.Stock}}</p>
                            </li>
                            {{/if}}
                        </ul>
                    </div>

                    <div class="pricing-meta mt-30px">
                        <ul>
                            <li class="old-price not-cut"><strong>{{format_number product.Price}}</strong></li>
                        </ul>
                    </div>
                    <div class="pro-details-quality">
                        {{#if product.outstock}}

                        {{else}}

                        {{/if}}
                        <div class="cart-plus-minus">
                            <input class="cart-plus-minus-box" type="number" name="quantity" value="1" />
                        </div>
                        <div class="d-flex">
                            <span class="pro-details-cart">
                                <form method="post" action="/product/buynow">
                                    <input type="hidden" name="username" value="{{authUser.Username}}" />
                                    <input type="hidden" name="ProID" value="{{product.ProID}}" />
                                    <button class="add-cart" type="submit" value="Submit"> Add To Cart</button>
                                </form>
                            </span>

                            <span class="pro-details-cart">
                                <form method="post" action="/product/buynow">
                                    <input type="hidden" name="username" value="{{authUser.Username}}" />
                                    <input type="hidden" name="ProID" value="{{product.ProID}}" />
                                    <button class="buy-cart" type="submit" value="Submit">Buy now</button>
                                </form>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container pb-50px">
        <div class="product-description">
            <div class="product-description-title">
                <p>Description</p>
            </div>
        </div>
        <div class="product-description-text">
            <div>
                {{{product.Description}}}
            </div>
        </div>
    </div>

    {{!-- Related Product --}}
    <div class="container">
        <div class="product-description">
            <div class="product-description-title">
                <p>Related Product</p>
            </div>
        </div>

        <div class="owl-carousel owl-theme pt-3">

            <div class="item card-item">
                <div class="card">
                    <img src="https://picsum.photos/200" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Tên đây nha</h5>
                        <div class="card-price">
                            <p class="card-price-num">1000000 </p>
                        </div>
                        <hr>
                        <p class="card-sold">Sold: 9k</p>
                    </div>
                    <div class="card__overlay">
                        <a href="/product/detail/{{this.ProID}}" class="card__overlay-detail">
                            <i class="fa fa-arrow-circle-right"></i>Detail
                        </a>
                        <button class="card__overlay-cart">
                            <i class="fa fa-shopping-cart"></i>Add to cart
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>