



<!-- Cart Area Start -->
<div class="cart-main-area pt-100px pb-100px height-full">
    <div class="container">
        {{#if isEmpty}}
            <h2 class="text-gray-700 h-10 ml-5 text-start">Your cart is empty!</h2>
            <a href="/">
                <h4>
                    <i class="fa fa-arrow-right text-danger"></i>
                    <span class="text-danger ml-2">Go shopping</span>
                </h4>
            </a>
        {{else}}
            <div class="row">
                <div class="col-12 col-lg-9">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content"
                             style="min-height: 200px;max-height: 500px">
                            <table>
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each cart}}
                                    <tr>
                                        <td class="product-thumbnail">
                                            <a href="/product/detail/{{ProID}}"><img class="img-responsive"
                                                                                     src="{{LinkURL}}"
                                                                                     alt="{{ProName}}"/></a>
                                        </td>
                                        <td class="product-name"><a href="/product/detail/{{ProID}}"><b>{{ProName}}</b></a>
                                        </td>
                                        <td class="product-price-cart"><span class="amount">{{format_number
                                                Price}}</span></td>
                                        <td class="product-quantity">{{StockCart}}
                                        </td>

                                        <td class="product-subtotal">{{format_number subtotal}}</td>
                                        <td {{#if outstock}} class="text-danger" {{else}} class="text-primary" {{/if}}>
                                            <strong>
                                                {{Stock}}
                                            </strong>
                                        </td>
                                        <td class="product-remove">
                                            <button type="submit" name="ProID" class="text-danger" value={{ProID}}
                                                    formmethod="post" formaction="/account/cart-del">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
