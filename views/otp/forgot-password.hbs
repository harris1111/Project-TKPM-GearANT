<div class="pt-100px pb-100px" style="width: 50%; margin: 0 auto;">

<form id="formReset" method="post" action="/forget-password">
    <div class="container mx-auto flex justify-center pt-16">
        <div class="w-96  p-8 border border-cyan-700 shadow-2xl ">
            {{!-- {{#if error}}
                <p class="text-red-600 text-left mb-4 "><strong>{{error}}</strong></p>
            {{/if}} --}}
            <label>
                Enter your email to reset password.
            </label>
            <input
                    class="flex-1 mt-2 appearance-none
                    form-control
                    border border-cyan-700 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none"
                    id="txtEmail"
                    placeholder="Email"
                    name="Email"/>
