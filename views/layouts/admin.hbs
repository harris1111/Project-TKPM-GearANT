<body>
    <header>
        <div class="header-main sticky-nav">
            <nav class="navbar navbar-light navbar-expand-xl position-relative">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-self-center header-logo align-items-center" href="/">
                        <img src="https://i.imgur.com/5g0Inms_d.webp?maxwidth=760&fidelity=grand" alt="logo">
                        <p class="fw-bold text-light">GEAR<span>ANT</span></p>
                    </a>
                    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar"
                        aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header text-end">
                            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body main-menu navbar-collapse px-3">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="main-menu-link dropdown-toggle" href="#"
                                        data-bs-toggle="dropdown">Category
                                    </a>
                                    <ul class="dropdown-menu">
                                        {{#each lcCategories}}
                                        <li><a class="dropdown-item"
                                                href="/product/byBigCat/{{BigCatID}}">{{BigCatName}}</a>
                                            <ul class="submenu dropdown-menu">
                                                {{#each childCat}}
                                                <li><a class="dropdown-item"
                                                        href="/product/byCat/{{CatID}}">{{CatName}}</a>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{#if auth}}
                                <li class="nav-item">
                                    <a href="/account/order" class="main-menu-link">Account</a>
                                </li>
                                {{#if isAdmin}}
                                <li class="nav-item">
                                    <a class="main-menu-link" href="/admin/order">Admin</a>
                                </li>
                                {{/if}}
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="align-self-center d-flex justify-content-center">
                            <div class="header-actions">
                                {{#if auth}}
                                <a href="/account/cart"
                                    class="header-action-btn header-action-btn-cart pr-0 text-light">
                                    <i class="pe-7s-shopbag"></i>
                                    {{#if cartSum}}
                                    <span
                                        class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light">
                                        {{cartSum}}
                                    </span>
                                    {{/if}}
                                </a>
                                    <span class="text-light">Hello, {{authUser.Name}} </span>                                {{/if}}
                                {{#if auth}}
                                <form id="formLogout" action="/logout" method="post"></form>
                                <a class="logout-btn"
                                    href="javascript: $('#formLogout').submit();">
                                    Log out
                                </a>
                                {{else}}
                                <a href="/login">Sign In</a>
                                {{/if}}
                            </div>
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" style="border: none;">
                            <span class="navbar-toggler-icon text-light" style="background-image: none; line-height: 30px;"><i class="fa fa-bars"></i></span>
                        </button>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="admin">
